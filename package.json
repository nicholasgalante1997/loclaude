{
  "name": "loclaude",
  "version": "0.0.3",
  "description": "Claude Code with local Ollama LLMs - Zero API costs, no rate limits, complete privacy",
  "type": "module",
  "license": "./LICENSE",
  "keywords": [
    "claude",
    "claude-code",
    "ollama",
    "llm",
    "local-llm",
    "ai-coding",
    "self-hosted",
    "cli",
    "ai",
    "open-webui",
    "docker",
    "nvidia",
    "gpu",
    "offline-ai",
    "privacy",
    "cost-free",
    "unlimited"
  ],
  "contributors": [
    {
      "email": "rustycloud42@protonmail.com",
      "name": "mega-blastoise",
      "url": "https://github.com/mega-blastoise"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicholasgalante1997/loclaude.git"
  },
  "homepage": "https://github.com/nicholasgalante1997/loclaude#readme",
  "bugs": {
    "url": "https://github.com/nicholasgalante1997/loclaude/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "files": [
    ".claude/CLAUDE.md",
    "bin",
    "dist",
    "docker/docker-compose.yml",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "bin": {
    "loclaude": "bin/index.mjs",
    "bun-loclaude": "bin/index.ts"
  },
  "workspaces": [
    "libs/*"
  ],
  "engines": {
    "bun": ">=1.3"
  },
  "packageManager": "bun@1.3.6",
  "scripts": {
    "docs": "bunx serve ./docs",
    "lint": "eslint libs",
    "format": "prettier --write libs",
    "build": "turbo run build",
    "test": "bun test libs/cli",
    "prerelease-check": "./scripts/prerelease-check.sh",
    "prepublishOnly": "bun run build",
    "prerelease": "run-s test build prerelease-check",
    "release": "npm publish --access public",
    "release:rc": "npm publish --tag rc --access public",
    "release:alpha": "npm publish --tag alpha --access public",
    "release:beta": "npm publish --tag beta --access public",
    "postrelease": "./scripts/tag.sh $(jq -r .version package.json)"
  },
  "dependencies": {
    "@loclaude-internal/cli": "^0.0.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@types/bun": "latest",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.0",
    "turbo": "^2.7.5",
    "typescript-eslint": "^8.53.1"
  }
}
